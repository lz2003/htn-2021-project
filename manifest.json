{
    "name": "Cool Extension haha",
    "version": "1.0",
    "description": "Pomodoro Timer",
    "permissions": ["tabs","activeTab", "storage", "notifications"],
    "background": {
        "scripts": ["src/js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "src/html/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/js/fish.js"]
        }],
    "web_accessible_resources": [
        "assets/*.png"
    ],
    "manifest_version": 2
}