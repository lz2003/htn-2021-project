{
    "name": "Productivity Fishing",
    "version": "1.0",
    "description": "A pomodoro timer with fishy twist.",
    "permissions": ["tabs","activeTab", "storage", "notifications"],
    "background": {
        "scripts": ["src/js/background.js", "src/js/init.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "src/html/popup.html",
        "default_icon": "assets/icon.png"
    },
    "options_page": "src/html/collections.html",
    "web_accessible_resources": [
        "assets/*.png"
    ],
    "manifest_version": 2
}